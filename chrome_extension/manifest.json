{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name": "Ansatz",
    "short_name": "Ansatz",
    "version": "0.0.24",
    "description": "Stop connecting. Start emailing.",
    "background": {
        "persistent": false,
        "scripts": [
            "libs/jquery.js",
            "libs/lscache.js",
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [ "https://mail.google.com/*" ],
            "css": ["libs/scoped-twbs.css"],
            "js": [
                "libs/jquery.js",
                "libs/lscache.js",
                "libs/mustache.js",
                "content_script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "libs/*",
        "templates/*",
        "img/*"
    ],
    "externally_connectable": {
        "matches": [ "https://mail.google.com/*" ]
    },
    "minimum_chrome_version": "26",
    "permissions": [
        "https://mail.google.com/", 
        "https://www.ansatz.me/api/*",
        "https://ansatz.me/api/*",
        "http://www.ansatz.me/api/*",
        "http://ansatz.me/api/*",
        "https://*.rapportive.com/",
        "tabs"
        ],
    "browser_action":{
        "default_title": "Ansatz",
        "default_icon": "img/Aicon19x19.jpeg",
        "default_popup": "popup/popup.html"
    },
    "manifest_version": 2
}
