<script id="reminder-popover-content" type="text/x-handlebars-template">
  <div 
    class="reminder-popover-content" 
    data-profile-id="{{!profile_id}}" 
    data-reminder-id="{{!reminder_id}}"
  >
    <ul>
      <li class="reminder-option" data-reminder-recurring-checkbox='true'>
        Recurring
        <input class="recurring-checkbox" type="checkbox" checked>
      </li>
      <li class="reminder-option" data-reminder-days='7' data-reminder-recurring='true'>
        Weekly
        </li>
      <li class="reminder-option" data-reminder-days='30' data-reminder-recurring='true'>
        Monthly
      </li>
      <li class="reminder-option" data-reminder-days='90' data-reminder-recurring='true'>
        Quarterly
      </li>
      <!--<li class="reminder-option" data-reminder-days="custom">
        Custom Date
      </li>-->
      {{!#if edit}}
      <li class="reminder-option" data-reminder-delete='true'>
        Mark Complete
      </li>
      <li class="reminder-option" data-reminder-delete='true'>
        Delete
      </li>
      {{!/if}}
    </ul>
  </div>
</script>