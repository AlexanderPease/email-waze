<script id="search-result-modal" type="text/x-handlebars-template">
  <div id="modal-{{! profile_id }}" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"
          aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="detailModalTitle">
            {{! name }} ({{! email }})
          </h4>
        </div>
        <div class="modal-body">
          <table id="table-{{! profile_id }}" class="row-border hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th># Sent</th>
                <th># Received</th>
                <th>Latest Sent</th>
                <th>Latest Received</th>
              </tr>
            </thead>
            <tbody>
              {{!#each connections }}
                <tr>
                  <td>{{! connected_user_name }}</td>
                  <td>{{! connected_user_email }}</td>
                  <td>{{! total_emails_out }}</td>
                  <td>{{! total_emails_in }}</td>
                  <td>{{! latest_email_out_date }}</td>
                  <td>{{! latest_email_in_date }}</td>
                </tr>
              {{!/each}}
            </tbody>
          </table>
        </div><!--group-modal modal-body-->
      </div>
    </div>
  </div>
</script>